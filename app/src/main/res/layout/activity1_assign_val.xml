<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity1_assignValue"
    android:background="@drawable/background_color">

  <ImageButton
      android:id="@+id/button3_2"
      android:layout_width="62dp"
      android:layout_height="60dp"
      android:background="@drawable/my_button3_eff"
      android:src="@drawable/ic_baseline_arrow_back_24"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <TextView
      android:id="@+id/textview4"
      android:layout_width="190dp"
      android:layout_height="wrap_content"
      android:textAlignment="center"
      android:layout_marginRight="10dp"
      android:text="Значение переменной"
      android:textSize="30sp"
      android:layout_marginTop="150dp"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintRight_toRightOf="parent"/>

  <EditText
      android:id="@+id/edittext2"
      android:layout_width="190dp"
      android:layout_height="40dp"
      android:layout_marginTop="10dp"
      app:layout_constraintTop_toBottomOf="@id/textview4"
      app:layout_constraintRight_toRightOf="@id/textview4"
      app:layout_constraintLeft_toLeftOf="@id/textview4"/>

  <TextView
      android:id="@+id/textview5"
      android:layout_width="190dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="150dp"
      android:layout_marginLeft="10dp"
      android:text="Имя переменой"
      android:textSize="30sp"
      android:textAlignment="center"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"/>

  <Spinner
      android:id="@+id/spinner2"
      android:layout_width="190dp"
      android:layout_height="40dp"
      android:layout_marginTop="10dp"
      app:layout_constraintTop_toBottomOf="@id/textview5"
      app:layout_constraintRight_toRightOf="@id/textview5"
      app:layout_constraintLeft_toLeftOf="@id/textview5"/>

  <Button
      android:id="@+id/button1_2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="210dp"
      android:background="@drawable/my_button1_exit_eff"
      android:text="Присвоить"
      android:textSize="22sp"
      android:padding="16dp"
      android:textColor="@color/black"
      app:backgroundTint="@null"
      app:layout_constraintTop_toBottomOf="@id/edittext2"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>