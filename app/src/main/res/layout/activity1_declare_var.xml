<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_color"
    tools:context=".Activity1_declareVar">

    <TextView
        android:id="@+id/textview2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Имя переменной"
        android:textSize="30sp"
        android:layout_marginTop="170dp"
        android:layout_marginLeft="23dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/textview3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Тип"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@id/textview2"
        app:layout_constraintRight_toRightOf="@id/spinner1"
        app:layout_constraintLeft_toLeftOf="@id/spinner1"/>

    <EditText
        android:id="@+id/edittext1"
        android:layout_width="240dp"
        android:layout_height="40dp"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/textview2"
        app:layout_constraintLeft_toLeftOf="@id/textview2"
        app:layout_constraintRight_toRightOf="@id/textview2" />
    
    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="65dp"
        android:layout_height="40dp"
        android:layout_marginRight="22dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/edittext1"/>
    
    <ImageButton
        android:id="@+id/button3_1"
        android:layout_width="62dp"
        android:layout_height="60dp"
        android:background="@drawable/my_button3_eff"
        android:src="@drawable/ic_baseline_arrow_back_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button1_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="210dp"
        android:background="@drawable/my_button1_exit_eff"
        android:text="Создать"
        android:textSize="23sp"
        android:padding="18dp"
        android:textColor="@color/black"
        app:backgroundTint="@null"
        app:layout_constraintTop_toBottomOf="@id/edittext1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>